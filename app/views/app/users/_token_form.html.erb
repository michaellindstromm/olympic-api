<p class="lead">Input your email and password to get your first token!</p>

<div class="customForm">
    <%= form_for :user, url: token_path, remote: false do |f| %>
        <div class="col-md-9 mx-auto">
            <div class="customInputDiv">
                <%= f.email_field :email, required: true, class: "customInput"  %>
                <%= f.label :email, class: "customLabel" %>
            </div>
            <div class="customInputDiv">
                <%= f.password_field :password, required: true, class: "customInput"  %>
                <%= f.label :password, class: "customLabel" %>
            </div>
            <div class="formSignupDiv mt-4">
                <%= f.submit 'GetToken', class: 'btn-block btn-primary firstTokenButton' %>
            </div>
        </div>
    <% end %>
</div>

<div class="alertDiv mx-auto d-flex mt-4 align-items-center justify-content-center">
    <% if flash[:alert]%>
        <%= render 'flash' %>
    <% end %>
</div>
<div class="header d-flex">
    <%= link_to image_tag('back_arrow.png', width: "50px", height: "50px", class: "mt-4", style: "position:absolute;"), root_path, data: { 'no-turbolink' => true }, class: "ml-4" %>
</div>
    <% if !@auth %>
        <h2 class="text-center mx-auto mt-4 mb-1 display-3">Thanks for Signing Up!</h2>
    <% end %>
<div class="container">

    <div class="formAndToken text-center my-4 lead">
        <% if @auth %>

            <h2 class="text-center mx-auto mt-4 mb-4 pb-4 display-3">A special token just for you!</h2>
            <p class="lead mx-auto">Click anywhere in the box to copy.</p>
            <div class="showToken"><%= @token %></div>
            
        <% else %>
            <%= render 'token_form' %>
        <% end %>
    </div>

    <div class="countdown-wrapper">
        <%= image_tag('Olympic-Rings.png', width: '100%', height: '100%', objectFit: 'cover')%>

        <div class="mt-4 mb-2 text-center mx-auto">
            <h1 class="olympic-title text-center mx-auto display-3">2018 Winter Olympics</h1> 
            <h1 class="mb-2 display-3">Countdown</h1>
            <h1>PyeongChang, South Korea</h1>
        </div>

        <div class="clock-div mt-4 pt-4">
            <div class="clock">

            </div>
        </div>

    </div>

</div>